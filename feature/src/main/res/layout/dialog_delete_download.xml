<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="370dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/del_dl_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Delete Downloaded Episode?"
        android:textSize="20dp"
        android:textColor="@android:color/primary_text_light"
        android:gravity="center"/>

    <TextView
        android:id="@+id/del_dl_dialog_ep_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="EpTitle"
        android:textSize="16dp"
        android:textColor="@android:color/primary_text_light"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/del_dl_ep_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Desc"
            android:textColor="@android:color/primary_text_light"
            android:textSize="12dp" />

    </ScrollView>

    <TextView
        android:id="@+id/del_dl_ep_filesize"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="FileSize"
        android:textColor="@android:color/primary_text_light"
        android:gravity="center"/>

    <TextView
        android:id="@+id/del_dl_ep_filetype"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="audio/mpeg"
        android:textColor="@android:color/primary_text_light"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/del_dl_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Cancel"
            android:clickable="true"
            android:background="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/del_dl_del_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Delete"
            android:clickable="true"
            android:background="@android:color/holo_orange_dark" />

    </LinearLayout>

</LinearLayout>